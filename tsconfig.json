{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "lib": [
      "ES2016"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  }
}